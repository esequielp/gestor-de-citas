generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         String   // 'ADMIN', 'EMPLOYEE'
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  employee     Employee?
}

model Branch {
  id             String          @id @default(uuid())
  name           String
  address        String
  imageUrl       String?
  lat            Float
  lng            Float
  phone          String?
  isActive       Boolean         @default(true)
  branchServices BranchService[]
  employees      Employee[]
  appointments   Appointment[]
}

model Service {
  id              String          @id @default(uuid())
  name            String
  description     String?
  durationMinutes Int
  price           Decimal
  isActive        Boolean         @default(true)
  branchServices  BranchService[]
  employeeServices EmployeeService[]
  appointments    Appointment[]
}

model BranchService {
  branchId  String
  serviceId String
  isActive  Boolean @default(true)
  branch    Branch  @relation(fields: [branchId], references: [id])
  service   Service @relation(fields: [serviceId], references: [id])

  @@id([branchId, serviceId])
}

model Employee {
  id             String            @id @default(uuid())
  userId         String?           @unique
  branchId       String
  name           String
  roleLabel      String
  avatarUrl      String?
  isActive       Boolean           @default(true)
  user           User?             @relation(fields: [userId], references: [id])
  branch         Branch            @relation(fields: [branchId], references: [id])
  services       EmployeeService[]
  schedules      Schedule[]
  appointments   Appointment[]
}

model EmployeeService {
  employeeId String
  serviceId  String
  employee   Employee @relation(fields: [employeeId], references: [id])
  service    Service  @relation(fields: [serviceId], references: [id])

  @@id([employeeId, serviceId])
}

model Schedule {
  id         String   @id @default(uuid())
  employeeId String
  dayOfWeek  Int      // 0-6
  startTime  String   // "09:00"
  endTime    String   // "18:00"
  isWorkDay  Boolean  @default(true)
  employee   Employee @relation(fields: [employeeId], references: [id])
}

model Client {
  id           String        @id @default(uuid())
  fullName     String
  email        String        @unique
  phone        String?
  notes        String?
  appointments Appointment[]
}

model Appointment {
  id                 String   @id @default(uuid())
  clientId           String
  branchId           String
  serviceId          String
  employeeId         String
  date               String   // Format: "YYYY-MM-DD"
  time               Int      // Hour: 9, 10, etc.
  status             String   // 'PENDING', 'CONFIRMED', 'CANCELLED', 'COMPLETED', 'NO_SHOW'
  cancellationReason String?
  createdAt          DateTime @default(now())

  client   Client   @relation(fields: [clientId], references: [id])
  branch   Branch   @relation(fields: [branchId], references: [id])
  service  Service  @relation(fields: [serviceId], references: [id])
  employee Employee @relation(fields: [employeeId], references: [id])
}

model ReminderSettings {
  id                String  @id @default(uuid())
  emailReminders    String  @default("24")
  whatsappReminders String  @default("2")
  n8nWebhookUrl     String?
  n8nApiKey         String?
}
